<h1>Creation Mode</h1><br>

<div class="creation-mode-container">

  <form class="post-form form-group">
    <h4>Add a new Card:</h4><br>
    French:<br><input type="text" name="card[french_word]" placeholder="Ex: Bonjour"></input><br><br>
    English:<br><input type="text" name="card[english_word]" placeholder="Ex: Hello"></input><br><br>
    Personal Connection:<br><textarea type="text" name="card[personal_connection]" placeholder="Add your own connection"></textarea><br><br>

    <input list="decks-list" id="deck-input" placeholder="Add to Deck">
      <datalist id="decks-list">
          <% @decks.each do |deck| %>
            <option data-id="<%= deck.id %>" value="<%= deck.name %>"><%= deck.name %></option>
          <% end %>
      </datalist><br><br>
    <input type="submit" class="btn btn-primary" id="create-card-btn" value="Create">
  </form>

  <div class="new-card">
  </div>

</div>
